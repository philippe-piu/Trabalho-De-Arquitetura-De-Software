<!DOCTYPE html>
<html lang="pt-br">
  {{>head}}
  <body class="confBody">
    <section class="confSection">
      <div class="bloco">
        <h1>Detalhe do Pedido</h1>
        <script src="./src/controller/detalheController.js"></script>
        <p>Cliente ID: {{cliente.id}}</p>
        <p>Cliente Nome: {{cliente.nome}}</p>
        <ul>
          {{#itens}}
          <li>{{produto.nome}} - Quantidade: {{quantidade}}</li>
          {{/itens}}
        </ul>
        <p>Total: R$ <span id="total">{{total}}</span></p>
        <input
          id="editarBtn"
          class="input"
          type="submit"
          value="Editar Pedido"
        />
        <input
          id="excluirBtn"
          class="input"
          type="submit"
          value="Excluir Pedido"
        />
      </div>
    </section>
  </body>
</html>
