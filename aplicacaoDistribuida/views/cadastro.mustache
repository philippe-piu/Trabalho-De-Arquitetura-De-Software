<!DOCTYPE html>
<html lang="pt-br">
  <!-- Head -->
  {{>head}}
  <body class="background">
    <!-- Cabeçalho -->
    {{>header}}

    <!-- Conteúdo Da Pagina -->
    <main>
      <div class="titulo">
        <h1>Cadastre-se</h1>
      </div>
      <div class="container">
        <div class="forBloco">
          <form>
          <label>Nome Completo</label><br />
            <input
              class="input"
              type="nome"
              id="nome"
              name="nome"
              placeholder="Ex: Maria Silva"
            /><br />
            <label>Email</label><br />
            <input
              class="input"
              type="email"
              id="email"
              name="email"
              placeholder="Ex: maria@gmail.com"
            /><br />
            <label>Telefone</label><br />
            <input
              class="input"
              type="telefone"
              id="telefone"
              name="telefone"
              placeholder="Ex: (43)99999-0000"
            /><br />
             <label>Endereço</label><br />
            <input
              class="input"
              type="endereco"
              id="endereco"
              name="telefone"
              placeholder="Ex: Rua da esquina"
            /><br />
             <label>Numero</label><br />
            <input
              class="input"
              type="numero"
              id="numero"
              name="numero"
              placeholder="Ex: 111"
            /><br />
             <label>Bairro</label><br />
            <input
              class="input"
              type="bairro"
              id="bairro"
              name="bairro"
              placeholder="Ex: Jardim Silva"
            /><br />
            <label>Cidade</label><br />
            <input
              class="input"
              type="cidade"
              id="cidade"
              name="cidade"
              placeholder="Ex: São Paulo"
            /><br />
            <label>Cep</label><br />
            <input
              class="input"
              type="cep"
              id="cep"
              name="cep"
              placeholder="Ex: 86300-000"
            /><br />
            <label>CPF</label><br />
            <input
              class="input"
              type="cpf"
              id="cpf"
              name="cpf"
              placeholder="Ex: 00000000001"
            /><br />
            <label>Senha</label><br />
            <input
              class="input"
              id="senha"
              type="password"
              name="senha"
            /><br />
            <div class="meuCenter">
              <input class="input" id="botao" type="submit" value="Cadastra-se" />
            </div>
          </form>
        </div>
      </div>
    </main>

    <!-- Rodapé -->
    {{>footer}}
  </body>
</html>
